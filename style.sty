% --- 2. Citation Logic ---
\usepackage[
    backend=biber, 
    style=authoryear,
    sorting=nyt,
    maxcitenames=2,
    url=false,
    doi=false
]{biblatex}
\setlength{\bibitemsep}{0.5\baselineskip}

% --- Make entire citation a hyperlink ---
\DeclareFieldFormat{citehyperref}{%
  \DeclareFieldAlias{bibhyperref}{noformat}%
  \bibhyperref{#1}}

\DeclareCiteCommand{\cite}
  {\usebibmacro{prenote}}
  {\usebibmacro{citeindex}%
   \printtext[citehyperref]{\usebibmacro{cite}}}
  {\multicitedelim}
  {\usebibmacro{postnote}}

\DeclareCiteCommand{\parencite}[\mkbibparens]
  {\usebibmacro{prenote}}
  {\usebibmacro{citeindex}%
   \printtext[citehyperref]{\usebibmacro{cite}}}
  {\multicitedelim}
  {\usebibmacro{postnote}}

\DeclareCiteCommand{\textcite}
  {\boolfalse{cbx:parens}}
  {\usebibmacro{citeindex}%
   \printtext[citehyperref]{\usebibmacro{textcite}}}
  {\ifbool{cbx:parens}{\bibcloseparen\global\boolfalse{cbx:parens}}{}%
   \multicitedelim}
  {\usebibmacro{textcite:postnote}}

% --- 3. Section Spacing ---
\usepackage{titlesec}
\titleformat{\section}{\large\bfseries}{\thesection}{1em}{}
\titleformat{\subsection}{\normalsize\bfseries}{\thesubsection}{1em}{}
\titlespacing*{\section}{0pt}{3.5ex plus 1ex minus .2ex}{2.3ex plus .2ex}
\titlespacing*{\subsection}{0pt}{3.25ex plus 1ex minus .2ex}{1.5ex plus .2ex}

% --- Hyperlinks ---
\usepackage{hyperref}
\hypersetup{
  colorlinks=false,
  urlbordercolor=white
}

% Add small spacing around URLs so white box doesn't clip adjacent text
\let\oldurl\url
\renewcommand{\url}[1]{\hspace{1pt}\oldurl{#1}\hspace{1pt}}